package org.xtext.example.mydsl.generator;
import java.util.ArrayList;

import org.xtext.example.mydsl.jSchema.MainObject;
public class ObjectClass{
	String name;
	ArrayList<MainObject> includedPrimitiveObjects;
	
	public ObjectClass(String name){
		includedObjects = new ArrayList<MainObject>();
		this.name = name;
	}

	public void addObjectToObjectArray(MainObject obj) {
		includedObjects.add(obj);
	}
	
	public void setName(String name) {
		this.name = name;
	}
	
	public String getName() {
		return this.name;
	}
	
	public boolean equals(MainObject anotherObject) {  
	       if (this == anotherObject) {  
	           return true;  
	       } else {
	    	   return false;
	       }
	}
	
	public String getObjectJSchemaString() {
		
		return "\"$id\":\"" + this.name + ",\n" 
		+ "\"type\":\"object\",\n"
		+ "";
	}

}
