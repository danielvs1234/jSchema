grammar org.xtext.example.mydsl.JSchema with org.eclipse.xtext.common.Terminals

generate jSchema "http://www.xtext.org/example/mydsl/JSchema"

Model:
	Object | PrimitiveObject
;

terminal BOOLEAN:
	'True' | 'False'
;

terminal DOUBLE:
	INT'.'INT
;

terminal NUMBER:
	INT | DOUBLE
;

Object:
 	name=ID ('includes' includeObjects=Includes)? '{' (properties=hasProperties)? (nestedObjectName=ID nestedObject=Object)? '}' 
;

PrimitiveObject:
	type=Types name=ID ('with' primitiveProperties=PrimitiveProperties)? 
;

//ObjectRequireMinimumProperties:
//	'require' (('minimum') | ('maximum')) INT 'properties' properties=hasProperties
//;

Types:
	object=Object | ({STRING} 'String' string=STRING) | {Array} array=Array | number=NUMBER | boolean=BOOLEAN| 'null'
;

hasProperties:
	{hasProperties} properties+=Property*
;

Property:
 	type=Types name=ID  
;

PrimitiveProperties:
	('length' INT '-' INT) | ('pattern' '"'STRING'"' )
;

Includes:
	objectID+=STRING (',' objectID+=STRING)*
;

//Types
Array:
 	name=ID '[' (length=INT)? ']'
;










